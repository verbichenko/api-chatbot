# Environment Configuration for API Support Chatbot

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://ecwid-partner-services.openai.azure.com/
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_API_VERSION=2025-04-01-preview
# Available model options:  gpt-4o-mini gpt-4.1-mini gpt-4o
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4.1-mini
AZURE_HQ_OPENAI_DEPLOYMENT_NAME=gpt-4o

# MCP Server Configuration
MCP_API_SUPPORT_SERVER_URL=http://localhost:9000/mcp
MCP_API_SUPPORT_SERVER_TRANSPORT=streamable_http

# Chatbot Configuration
MAX_RETRIES=3
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json